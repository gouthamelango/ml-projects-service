{
    "$id": "projectCategorie-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "projectCategorie",
    "type":"object",
    "required": [
        "name",
        "visibility",
        "status",
        "icon",
        "noOfProjects",
        "createdBy",
        "updatedBy",
        "createdOn",
        "updatedOn"
    ],
    "properties": {	
        "name" : {
            "type": "string"
        },
        "visibility": {
            "type": "string",
            "enum": [
                "Default",
                "Parent",
                "Private",
                "Protected"
            ],
            "default": "Default"
        },
        "status": {
            "type": "string",
            "enum": [
                "Draft",
                "Review",
                "Live",
                "retired"
            ]
        },
        "icon": {
            "type": "string"
        },
        "externalID" : {
            "type": "string"
        },
        "noOfProjects" : {
            "type": "integer"
        },
        "createdBy" : {
            "type": "string"
        },
        "updatedBy" : {
            "type": "string"
        },
        "createdOn" : {
            "type": "string"
        },
        "updatedOn": {
            "type": "string"
        }  
    }
}
