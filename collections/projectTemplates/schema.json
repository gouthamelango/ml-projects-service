{
    "$id": "projectTemplates-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "projectTemplate",
    "type":"object",
    "required": [
        "projectTemplateId",
        "reusable",
        "status",
        "solutionId",
        "programId",
        "parentTemplateId",
        "metaInformation",
        "entityType",
        "title",
        "ratings",
        "averageRating",
        "noOfRatings",
        "createdBy",
        "updatedBy",
        "description",
        "keywords",
        "learningResources",
        "categories",
        "createdOn",
        "updatedOn",
        "recommendedFor",
        "tasks",
        "taskSequence"
    ],
    "properties": {
        "projectTemplateId": {
            "type": "string",
            "uniqueItems": true
        },
        "isReusable": {
            "type": "boolean",
            "default" : true,
            "index" : false
        },
        "status": {
            "type": "string",
            "enum": [
                "Draft",
                "Review",
                "Redraft",
                "Flagged",
                "Live",
                "Unlisted",
                "Retired",
                "Mock",
                "Processing",
                "FlagDraft",
                "FlagReview",
                "Failed"
            ],
            "default": "Draft"
        },  
        "externalId": {
            "type": "string"
        },                          
        "solutionId": {
            "type": "string"
        },
        "solutionExternalId": {
            "type": "string"
        },
        "programId": {
            "type": "string"
        },
        "programExternalId": {
            "type": "string"
        },
        "parentTemplateId": {
            "type": "string"
        },
        "metaInformation": {
            "type":"object",
            "properties": {
                "rationale":{
                    "type":"string"
                },
                "primaryAudience":{
                    "type":"string"
                },
                "goals":{
                    "type":"string"
                },
                "duration":{
                    "type":"string"
                },
                "successIndicators":{
                    "type":"string"
                },
                "risks":{
                    "type":"string"
                },
                "approaches":{
                    "type":"string"
                }
            }
        },
        "entityType": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "ratings": {
            "type": "number"
        },
        "averageRating": {
            "type": "number"
        },
        "noOfRatings": {
            "type": "number"
        },
        "createdBy": {
            "type": "string"
        },
        "updatedBy": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "keywords": {
            "type": "string"
        },
        "learningResources": {
            "type": "string",
            "properties":{
                "name":{
                    "type":"string",
                    "minLength":5
                },
                "id":{
                    "type":"string"
                }
            },
                "enum":[
                "app",
                "link"
                ]
            
        },
        "categories": {
            "type":"string",
            "enum": [
                "id",
                "externalId",
                "name"
            ]
        },
        "createdOn": {
            "type": "string"
        },
        "updatedOn": {
            "type": "string"
        },
        "recommendedFor": {
            "type":"string",
            "enum": [
                "roleId",
                "code"
            ]
        },
        "tasks": {
            "type": "string"
        },
        "taskSequence": {
            "type": "string"
        }
    }
}