{
    "$id": "projectTemplatesTasks-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "projectTemplatesTask",
    "type":"object",
    "required": [
        "name",
        "status",
        "children",
        "learningResources",
        "hasSubtask",
        "createdBy",
        "updatedBy"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 5
        },
        "status": {
            "type": "string",
            "enum": [
                "Draft",
                "Review",
                "Redraft",
                "Flagged",
                "Live",
                "Unlisted",
                "Retired",
                "Mock",
                "Processing",
                "FlagDraft",
                "FlagReview",
                "Failed"
            ],
            "default": "Draft"
        },
        "children": {
            "type": "string"
        },
        "learningResources": {
            "type":"string",
            "enum": [
                "name",
                "id",
                "app",
                "link",	
                "isChecked"
            ]
        },
        "description": {
            "type": "string"
        },
        "hasSubTasks": {
            "type": "boolean",
            "default" : false
        },
        "externalId": {
            "type": "string"
        },
        "parentId": {
            "type": "string"
        },
        "solutionDetails": {
            "type": "string"
        },
        "hasSequenceNumber": {
            "type": "string"
        },
        "taskSequence": {
            "type": "string"
        },
        "deletable": {
            "type": "string"
        },
        "taskType": {
            "type": "string"
        },
        "visibleIf": {
            "type":"string",
            "enum": [
                "id",	
                "operator",
                "value"
            ]
        },
        "createdBy": {
            "type": "string"
        },
        "updatedBy": {
            "type": "string"
        },
        "createdOn": {
            "type": "string"
        },
        "updatedOn": {
             "type": "string"
        }
    }
}

